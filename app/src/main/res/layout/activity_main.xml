<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imv_listen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:src="@mipmap/ic_found_ting_before" />

    <ImageView
        android:id="@+id/imv_listen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:src="@mipmap/ic_found_ting_before" />


    <RelativeLayout
        android:id="@+id/layout_voice"
        android:layout_width="match_parent"
        android:layout_height="260dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_normal_double"
            android:layout_toLeftOf="@+id/mic_image_bg"
            android:text="60''"
            android:textColor="@color/basecolor"
            android:textSize="@dimen/nineSize" />

        <ImageView
            android:id="@+id/mic_image_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_recording_before" />

        <ImageView
            android:id="@+id/mic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_recording_before" />

        <TextView
            android:id="@+id/tv_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_normal_double"
            android:layout_toRightOf="@+id/mic_image_bg"
            android:text="@string/replay_record"
            android:textColor="@color/basecolor"
            android:textSize="@dimen/sevenSize" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mic_image_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="点击录音，最多可录60''"
            android:textColor="@color/transblack"
            android:textSize="@dimen/sevenSize" />
    </RelativeLayout>


</LinearLayout>